{% extends 'base.html.twig' %}

{% block title %}Article{% endblock %}

{% block body %}

<div class="container">
    <h1>Liste des article</h1>

    <table class="table">
        <thead>
            <tr>
                <th scope="col">Titre</th>
                <th scope="col">Description</th>
                <th scope="col">Action</th>
            </tr>
        </thead>
        <tbody>
            {% for article in articles %}
                <tr>
                    <td>{{ article.titre }}</td>
                    <td>{{ article.description }}</td>
                    <td>
                        <a href="{{ path('app_update_article', {'id': article.id}) }}" class="btn btn-warning">Modifier<a>
                        <a href="{{ path('app_delete_article', {'id': article.id})}}" class="btn btn-danger">Supprimer<a>
                    </td>
                </tr>
            {% endfor %}
        </tbody>
    </table>

</div>
{% endblock %}
